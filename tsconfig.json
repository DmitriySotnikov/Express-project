{
 "compilerOptions": {
    "module": "commonjs",
   "outDir": "dist/build",
   "typeRoots": [
     "./@types",
      "./node_modules/@types"
    ],
   "rootDir": "src",
   "paths": {
      "*": ["./node_modules/*"],
    },
    "lib": ["es6", "esnext.asynciterable"],
   "allowJs": true,
   "downlevelIteration": true,
   "noUnusedLocals": true,
   "pretty": true,
    "removeComments": true,
    "sourceMap": true,
   "strictNullChecks": true,
    "target": "ES6",
   "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
   "moduleResolution": "Node",
   "noImplicitAny": false,
    "noImplicitThis": true,
   "allowSyntheticDefaultImports": true,
   "baseUrl": "./src/app.ts",

   "resolveJsonModule": true,
   "strict": false,
   "skipLibCheck": true
 },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
